<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.maxym.spring</groupId>
    <artifactId>SpringCourse</artifactId>
    <packaging>pom</packaging>

    <version>1.0-SNAPSHOT</version>
    <name>Spring Course</name>
    <url>https://maven.apache.org</url>

    <modules>
        <module>spring-app1</module>
        <module>spring-app2</module>
        <module>spring-app3</module>
        <module>spring-mvc-app1</module>
        <module>spring-mvc-app2</module>
        <module>spring-project-1</module>
        <module>hibernate-app1</module>
        <module>hibernate-app2</module>
    </modules>

    <build>
        <finalName>SpringCourse</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>17</source>
                    <target>17</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
